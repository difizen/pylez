{
    "name": "@difizen/libro-analyzer",
    "private": false,
    "displayName": "libro-analyzer",
    "description": "Type checker for the Python language with notebook support",
    "version": "0.1.2",
    "license": "MIT",
    "author": {
        "name": "zhanba"
    },
    "publisher": "zhanba",
    "engines": {
        "node": ">=12.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/difizen/libro-analyzer",
        "directory": "packages/libro-analyzer"
    },
    "scripts": {
