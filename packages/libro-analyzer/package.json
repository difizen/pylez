        "jsonc-parser": "^3.2.0",
        "leven": "^3.1.0",
        "source-map-support": "^0.5.21",
        "tmp": "^0.2.1",
        "vscode-jsonrpc": "8.1.0",
        "vscode-languageserver": "8.1.0",
